{
    // Python
    "python.defaultInterpreterPath": "${workspaceFolder}/ai-service/.venv/bin/python3.10",
    "python.terminal.activateEnvironment": true,
    "python.terminal.useEnvFile": true,
    "python.envFile": "${workspaceFolder}/ai-service/.env",
    "python.venvPath": "${workspaceFolder}/ai-service",

    // Test
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}/ai-service",

    // Import path
    "python.analysis.extraPaths": [
        "${workspaceFolder}/ai-service/app"
    ]
}
